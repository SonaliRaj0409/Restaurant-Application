<%= form_for(@restaurant, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :name, placeholder: "Compose new restaurant name..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>

  <span class="picture">
    <%= f.file_field :picture %>
  </span>
<% end %>